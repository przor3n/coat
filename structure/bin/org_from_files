#!/bin/bash
dir=$(pwd)
ORGFILE=$(basename $dir)
ORGFILE=${ORGFILE}.org

touch $ORGFILE

for file in "$@";do
    if [ -f "$file" ]; then
	filename=$(basename $file)
	name=${filename%.*}

	echo "\n" >> $ORGFILE
	echo "* $name" >> $ORGFILE
	echo "#+BEGIN_EXAMPLE" >> $ORGFILE
	textract $file >> $ORGFILE
	echo "\n" >> $ORGFILE
	echo "#+END_EXAMPLE" >> $ORGFILE
    fi
done
